#!/bin/sh

. "$(dirname "$0")/common"

[ -e "$CASSANDRA_CONF" ] || mkdir "$CASSANDRA_CONF"
[ -e "$CASSANDRA_LOGS" ] || mkdir "$CASSANDRA_LOGS"
[ -e "$CASSANDRA_DATA" ] || mkdir "$CASSANDRA_DATA"

# Required config files. Use the default if one is not provided.
for f in cassandra.yaml logback.xml cassandra-env.sh; do
    if [ ! -e "$CASSANDRA_CONF/$f" ]; then
        cp "$STATIC_CONF/$f" "$CASSANDRA_CONF/$f"
    fi
done

export JAVA_AGENT="$JAVA_AGENT -javaagent:$CASSANDRA_HOME/lib/jamm-0.3.0.jar"

export cassandra_storagedir="$CASSANDRA_DATA"
JVM_OPTS="$JVM_OPTS -Dcassandra.logdir=$CASSANDRA_LOGS"
JVM_OPTS="$JVM_OPTS -Dcassandra.config=file://$CASSANDRA_CONF/cassandra.yaml"
export JVM_OPTS

# The -x bit isn't set on cassandra
/bin/sh $SNAP/usr/sbin/cassandra -f -R
